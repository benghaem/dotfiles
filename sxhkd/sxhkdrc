#
# bspwm hotkeys
#

super + alt + Escape
	bspc quit && pkill panel

super + w
	bspc node focused -c

super + t
	bspc desktop -l next

super + b
	bspc desktop -B

super + {s,f,a}
	bspc node -t {"~floating","~fullscreen","~pseudo_tiled"}

super + {_,shift + }v
	bspc desktop -R {90, 180}

alt + {grave,Tab}
	bspc {node,desktop} -f last

super + apostrophe
	bspc node older -f

super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc window -w last.manual

super + m
	bspc node -s biggest

super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

super + {_,shift + }c
	bspc node -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

super + bracket{left,right}
	bspc desktop -f {prev,next}

#preselect
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,down -10,left +10}

super + alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,up -10,right +10}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + Return
	urxvt

super + d
	dmenu_run -h 22 -fn 'dejavu mono-10'

super + shift + d
	$HOME/.bin/trayerToggle.sh

super + shift + Return
	$HOME/.bin/xautolockToggle.sh

super + Tab
	rofi -show window

ctrl + grave
	copyq toggle

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
